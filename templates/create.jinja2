{% extends 'base.jinja2' %}

{% block subtitle %} New Donation{% endblock subtitle %}


{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name-input">Donor Name:</label>
        <input id="name-input" type="text" name="name">

    <label for="donation-input">Donation:</label>   
        <input id="donation-input" type="number" name="amount">

    <input type="submit" value="Submit Donation">
</form>
{% endblock content %} 
